<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="80dp">


    <ImageView
        android:id="@+id/iv_video_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        app:srcCompat="@drawable/video_default"/>
    <LinearLayout
        android:layout_toRightOf="@+id/iv_video_logo"
        android:paddingStart="6dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_item_name"
            android:textSize="16sp"
            android:textColor="#99000000"/>
        <TextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_item_time"
            android:textSize="12sp"
            android:textColor="#55000000"
            android:paddingTop="6dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_video_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#55000000"
        android:textSize="12sp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:text="20M"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>